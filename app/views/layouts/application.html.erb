  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Harmoni<strong> US </strong><span class="glyphicon glyphicon-music" aria-hidden="true"></span>
          </a>
          <!-- <%= link_to 'HarmoniUS', root_path %> -->
        </div>
        <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-2">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Music Maker', music_maker_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Keyboard', triads_path %></li>
          </ul>
          <span class="nav navbar-nav navbar-right navGap"></span>
          <ul class="nav navbar-nav navbar-right ">
            <li><%= link_to 'Learn Scales and Triads', triads_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    </div>
  </div>
